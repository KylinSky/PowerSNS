<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center"
    android:background="@drawable/log_bg_list">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="-30dp"
      android:gravity="center"
      android:orientation="horizontal" >

<ImageView
    android:id="@+id/imageView33"
    android:layout_width="55dp"
    android:layout_height="50dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="110dp"
    android:src="@drawable/bt_back" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="80dp"
        android:text="写日志"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />
 
 </LinearLayout>
    <EditText
        android:id="@+id/title_write"
        android:layout_width="244dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item3"
        android:ems="10"
        android:gravity="left|top"
        android:hint="请在这里输入日志的标题"
        android:paddingLeft="15dp"
        android:paddingTop="7dp"
        android:textColorHint="#00C"
        android:textSize="18sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/content_write"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/item3"
        android:ems="15"
        android:gravity="left|top"
        android:hint="请输入你的评论"
        android:inputType="textMultiLine"
        android:minLines="10"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColorHint="#00C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp" >

        <Button
            android:id="@+id/fabiao"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn1"
            android:text="发表"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/quxiao"
             android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="取消"
            android:textColor="#CCC"
            android:textStyle="bold"
             android:background="@drawable/btn1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right" >

      
    </LinearLayout>

</LinearLayout>